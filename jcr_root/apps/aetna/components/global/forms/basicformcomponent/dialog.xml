<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Basic Form Component"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <configuration
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <label
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Copy to render as the label of the field."
                        fieldLabel="Label"
                        name="./label"
                        xtype="textfield"/>
                    <descriptiontext
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Copy to render under the field as a description/help text."
                        fieldLabel="Description text"
                        name="./descriptiontext"
                        xtype="textarea"/>
                    <validations
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Include each validation for the field."
                        fieldLabel="Validations"
                        name="./validations"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="aetna.formvalidation"/>
                    </validations>
                </items>
            </configuration>
        </items>
    </items>
</jcr:root>
