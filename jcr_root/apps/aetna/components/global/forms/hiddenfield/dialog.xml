<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Hidden Field"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <configuration
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <name
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldDescription="HTML name attribute to be submitted."
                        fieldLabel="Input name"
                        name="./name"
                        xtype="textfield"/>
                    <value
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldDescription="Value of the hidden field to send to the submission endpoint."
                        fieldLabel="Input value"
                        name="./value"
                        xtype="textfield"/>
                </items>
            </configuration>
        </items>
    </items>
</jcr:root>
