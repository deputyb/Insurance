<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Form Wrapper"
    xtype="dialog">
    <items jcr:primaryType="cq:TabPanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Form Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <heading
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Text to display as the form heading"
                        fieldLabel="Form heading"
                        name="./heading"
                        xtype="textfield"/>
                    <subheading
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Text to display as the form subheading"
                        fieldLabel="Form subheading"
                        name="./subheading"
                        xtype="textfield"/>
                    <formaction
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldDescription="Path of the page to execute the form action"
                        fieldLabel="Form action"
                        name="./formaction"
                        xtype="pathfield"/>
                    <formmethodanalytics
                        jcr:primaryType="cq:Widget"
                        fieldDescription="JS method to use in the analytics tracking"
                        fieldLabel="Form method analytics"
                        name="./formmethodanalytics"
                        xtype="textfield"/>
                    <formnameanalytics
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Name of the form to use in the analytics tracking"
                        fieldLabel="Form name analytics"
                        name="./formnameanalytics"
                        xtype="textfield"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
