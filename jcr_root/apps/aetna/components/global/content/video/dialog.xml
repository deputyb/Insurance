<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    title="Video"
    width="650"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <configuration
                jcr:primaryType="cq:Panel"
                title="Configuration ">
                <items jcr:primaryType="cq:WidgetCollection">
                    <videotype
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldDescription="Select the video type to include"
                        fieldLabel="Video Type"
                        name="./videotype"
                        type="radio"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <file
                                jcr:primaryType="nt:unstructured"
                                text="From File"
                                value="file"/>
                            <youtube
                                jcr:primaryType="nt:unstructured"
                                text="YouTube Video"
                                value="youtube"/>
                        </options>
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            selectionchanged="function(field, value, isChecked) { Aetna.VideoUtils.manageConfigurationTabs(field); }"/>
                    </videotype>
                </items>
            </configuration>
            <video
                jcr:primaryType="cq:Panel"
                title="Video Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <videoname
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldDescription="Video name for analytics tagging"
                        fieldLabel="Video Name"
                        name="./videoname"
                        xtype="textfield"/>
                    <urls
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Click the '+' to add a new URL"
                        fieldLabel="Video URLs"
                        name="./urls"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            rootPath="/"
                            width="155"
                            xtype="pathfield"/>
                    </urls>
                    <height
                        jcr:primaryType="cq:Widget"
                        defaultValue="404"
                        fieldLabel="Height"
                        name="./height"
                        value="404"
                        xtype="numberfield"/>
                    <width
                        jcr:primaryType="cq:Widget"
                        defaultValue="720"
                        fieldLabel="Width"
                        name="./width"
                        value="720"
                        xtype="numberfield"/>
                    <autoplay
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Autoplay video on start"
                        fieldLabel="Autoplay"
                        name="./autoplay"
                        type="checkbox"
                        xtype="selection"/>
                </items>
            </video>
            <image
                jcr:primaryType="cq:Widget"
                allowBlank="true"
                cropParameter="./image/imageCrop"
                ddGroups="[media]"
                fieldLabel="Thumbnail"
                fileNameParameter="./image/fileName"
                fileReferenceParameter="./image/fileReference"
                mapParameter="./image/imageMap"
                name="./image/file"
                requestSuffix="/image.img.png"
                rotateParameter="./image/imageRotate"
                sizeLimit="100"
                title="Image"
                uploadUrl="/tmp/upload/*"
                xtype="html5smartimage"/>
            <youtubevideo
                jcr:primaryType="cq:Panel"
                title="YouTube Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <youtubeembedcode
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldDescription="HTML code generated by YouTube to embed the video"
                        fieldLabel="YouTube Embed Code"
                        name="./youtubeembedcode"
                        xtype="textarea"/>
                </items>
            </youtubevideo>
            <transcript
                jcr:primaryType="cq:Panel"
                title="Transcript">
                <items jcr:primaryType="cq:WidgetCollection">
                    <transcriptHeader
                        jcr:primaryType="cq:Widget"
                        defaultValue="Transcript"
                        description="Link to the page where the video transcript is"
                        fieldLabel="Header"
                        name="./transcriptHeader"
                        value="Transcript"
                        xtype="textfield"/>
                    <text
                        jcr:primaryType="cq:Widget"
                        path="/apps/aetna/components/global/content/articleModule/dialog/items/items/tab1/items/text.infinity.json"
                        xtype="cqinclude"/>
                    <isRichTextFlag
                        jcr:primaryType="cq:Widget"
                        ignoreData="{Boolean}true"
                        name="./textIsRich"
                        value="true"
                        xtype="hidden"/>
                    <resTypeImage
                        jcr:primaryType="cq:Widget"
                        ignoreData="true"
                        name="./image/sling:resourceType"
                        value="foundation/components/image"
                        xtype="hidden"/>
                </items>
            </transcript>
        </items>
    </items>
    <listeners
        jcr:primaryType="nt:unstructured"
        loadcontent="function(dialog) { Aetna.VideoUtils.manageConfigurationTabs(dialog); }"/>
</jcr:root>
