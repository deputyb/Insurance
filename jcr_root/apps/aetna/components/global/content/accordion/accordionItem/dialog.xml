<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Accordion Item"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <configuration
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldDescription="Text to include as the title of the item in the accordion."
                        fieldLabel="Title"
                        name="./title"
                        xtype="textfield"/>
                    <noarrowlink
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Check it if you want to remove the blue arrows on the links."
                        fieldLabel="No blue arrows on links"
                        name="./noarrowlink"
                        type="checkbox"
                        xtype="selection"/>
                    <itemposition
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Position of the item in the accordion. Change it to reorder the elements."
                        fieldLabel="Item position"
                        name="./itemposition"
                        xtype="numberfield"/>
                </items>
            </configuration>
        </items>
    </items>
</jcr:root>
