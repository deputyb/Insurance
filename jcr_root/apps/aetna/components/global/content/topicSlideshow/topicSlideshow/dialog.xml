<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Topic Slideshow"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <configuration
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <slidesqty
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldDescription="Number of slides to include in the slideshow"
                        fieldLabel="Slides quantity"
                        name="./slidesqty"
                        xtype="numberfield"/>
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Text to show in the slide show"
                        fieldLabel="Title:"
                        name="./title"
                        xtype="textfield"/>
                </items>
            </configuration>
        </items>
    </items>
</jcr:root>
