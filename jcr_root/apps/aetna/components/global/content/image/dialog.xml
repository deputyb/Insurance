<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <image
                jcr:primaryType="cq:Widget"
                allowBlank="false"
                cropParameter="./image/imageCrop"
                ddGroups="[media]"
                fieldLabel="Image"
                fileNameParameter="./image/fileName"
                fileReferenceParameter="./image/fileReference"
                mapParameter="./image/imageMap"
                name="./image/file"
                requestSuffix="/image.img.png"
                rotateParameter="./image/imageRotate"
                sizeLimit="100"
                title="Image"
                uploadUrl="/tmp/upload/*"
                xtype="html5smartimage"/>
            <mobileImage
                jcr:primaryType="cq:Widget"
                allowBlank="true"
                cropParameter="./mobileImage/imageCrop"
                ddGroups="[media]"
                fieldLabel="Mobile Image"
                fileNameParameter="./mobileImage/fileName"
                fileReferenceParameter="./mobileImage/fileReference"
                mapParameter="./mobileImage/imageMap"
                name="./mobileImage/file"
                requestSuffix="/mobileImage.img.png"
                rotateParameter="./mobileImage/imageRotate"
                sizeLimit="100"
                title="Mobile Image"
                uploadUrl="/tmp/upload/*"
                xtype="html5smartimage"/>
            <imageconfigs
                jcr:primaryType="cq:Widget"
                title="Image Config"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <resTypeImage
                        jcr:primaryType="cq:Widget"
                        ignoreData="true"
                        name="./image/sling:resourceType"
                        value="foundation/components/image"
                        xtype="hidden"/>
                    <resTypeMobileImage
                        jcr:primaryType="cq:Widget"
                        ignoreData="true"
                        name="./mobileImage/sling:resourceType"
                        value="foundation/components/image"
                        xtype="hidden"/>
                    <imageConfigs
                        jcr:primaryType="cq:Widget"
                        title="Image configuration"
                        xtype="fieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <alt
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Image Alt Text"
                                name="./imageAlt"
                                width="250"
                                xtype="textfield"/>
                            <imageTitle
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Image Title"
                                name="./imageTitle"
                                width="250"
                                xtype="textfield"/>
                            <imageURL
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Image URL"
                                name="./imageURL"
                                width="250"
                                xtype="pathfield"/>
                            <target
                                jcr:primaryType="nt:unstructured"
                                name="./target"
                                xtype="hidden"/>
                            <linktarget
                                jcr:primaryType="nt:unstructured"
                                fieldDescription="Check it if you want to open the link in a new window/tab"
                                fieldLabel="New tab/window"
                                name="./linktarget"
                                type="checkbox"
                                xtype="selection"/>
                            <interstitial
                                jcr:primaryType="nt:unstructured"
                                fieldDescription="Select the interstitial window to display"
                                fieldLabel="Interstitial"
                                name="./interstitial"
                                options="/services/article-module-interstitial?page=$PATH"
                                type="select"
                                xtype="selection"/>
                        </items>
                    </imageConfigs>
                </items>
            </imageconfigs>
        </items>
    </items>
    <listeners
        jcr:primaryType="nt:unstructured"
        beforesubmit="function(dialog){ var target = dialog.getField('./target'); var linkTarget = dialog.getField('./linktarget'); if (linkTarget.getValue() == 'true') { target.setValue('_blank'); } else { target.setValue(''); } }"
        loadContent="function(dialog){ var target = dialog.getField('./target'); var linkTarget = dialog.getField('./linktarget'); if (target.getValue() == '_blank') { linkTarget.setValue('true'); } else { linkTarget.setValue('false'); } }"/>
</jcr:root>
